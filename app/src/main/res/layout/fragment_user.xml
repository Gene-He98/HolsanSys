<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--病人属性界面-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@id/me_bt_emer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2E2E2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/me_name_big"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:gravity="center"
                        android:text="@string/user_name"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/me_name"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="180dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/me_attribute_marginTop"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/me_user_id_big"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:gravity="center"
                        android:text="@string/user_age"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView android:layout_width="200dp" android:layout_height="35dp"
                        android:textSize="20sp"
                        android:id="@+id/me_user_id"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="180dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="@dimen/me_attribute_marginTop"
                    android:orientation="horizontal" android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/me_telephone_big"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:gravity="center"
                        android:text="@string/user_sex"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView android:layout_width="200dp" android:layout_height="35dp"
                        android:textSize="20sp"
                        android:id="@+id/me_telephone"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="180dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="@dimen/me_attribute_marginTop"
                    android:orientation="horizontal" android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/me_area_big"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:gravity="center"
                        android:text="@string/user_address"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView android:layout_width="200dp" android:layout_height="35dp"
                        android:id="@+id/me_area"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="180dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="@dimen/me_attribute_marginTop"
                    android:orientation="horizontal" android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/me_blood_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:gravity="center"
                        android:text="@string/user_blood_type"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                    <TextView android:layout_width="200dp" android:layout_height="35dp"
                        android:id="@+id/me_blood"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginStart="180dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/me_medi_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/user_medical_history"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/me_medi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/me_medi_big"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/me_attribute_marginStart"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="@dimen/me_attribute_marginTop"
                    android:orientation="horizontal" android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/me_allergy_big"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/user_allergy"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/me_allergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/me_allergy_big"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/me_attribute_marginStart"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/me_attribute_marginStart"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <!--紧急按钮-->
        <RelativeLayout android:layout_width="match_parent" android:layout_height="150dp"
            android:id="@+id/me_bt_emer"
            android:background="@drawable/bt_emer_shape"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/me_emer_pic"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_alert_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/me_emer_pic"
                android:text="@string/user_alarm"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>